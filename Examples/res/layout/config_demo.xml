<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/config_alert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/config_uuid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="UUID"
                android:text="e2c56db5-dffb-48d2-b060-d0f5a71096e0" />

            <EditText
                android:id="@+id/config_measured_power"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="MeasuredPower"
                android:text="-59" />

            <EditText
                android:id="@+id/config_tx_power"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Txpower"
                android:text="1"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <RadioGroup
                    android:id="@+id/config_rdog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/config_raob0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Default" />

                    <RadioButton
                        android:id="@+id/config_raob1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Minus23" />

                    <RadioButton
                        android:id="@+id/config_raob2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Minus6" />

                    <RadioButton
                        android:id="@+id/config_raob3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Plus4" />
                </RadioGroup>
            </LinearLayout>

            <EditText
                android:id="@+id/config_advertising"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Advertising"
                android:inputType="number"
                android:text="400" />

            <Switch
                android:id="@+id/config_major"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Major"
                android:textOff="递减"
                android:textOn="递增" />

            <Switch
                android:id="@+id/config_minor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Minor"
                android:textOff="递减"
                android:textOn="递增" />

            <Switch
                android:id="@+id/config_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="开发模式"
                android:textOff="发布模式"
                android:textOn="开发者模式" />

            <Button
                android:id="@+id/config_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="开始" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>